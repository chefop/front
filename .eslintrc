{
  "plugins": ["prettier", "redux-saga", "security"],
  "extends": [
    "react-app",
    "plugin:prettier/recommended",
    "prettier/react",
    "plugin:security/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always"
      }
    ]
  }
}
